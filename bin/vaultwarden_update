        ;;
        web)
                ## Web Interface
                download_link="https://github.com/bitwarden/clients/releases/download/web-v${2}/web-${2}-selfhosted>
                cd /root
                rm -Rf web-backup
                mv web-vault web-backup
                wget $download_link
                sleep 1
                unzip web-$2-selfhosted-open-source.zip
                sleep 1
                mv build web-vault
                docker compose down
                rm web-$2-selfhosted-open-source.zip
                sleep 1
                docker compose up -d

                ## Old
